    <style name="navbar">
        <item name="background_color">#FFCCCCCC</item>
        <item name="border">0,2:#FF999999,0,0</item>
    </style>
    <style name="navbutton">
        <item name="background_color">#FFCCCCCC</item>
        <item name="font_color">#FF666666</item>
        <item name="font_size">40</item>
   		<item name="text_align">center</item>
   		<item name="padding">6</item>
    </style>
