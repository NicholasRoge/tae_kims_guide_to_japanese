	<style name="content_title">
	    <item name="font_color">#FF666666</item>
    	<item name="font_size">60</item>
    	<item name="font_style">bold</item>
        <item name="background_color">#FFCCCCCC</item>
        <item name="border">0,0,0,2:#FF999999</item>
        <item name="padding">4</item>
    </style>
    <style name="content_body">
	    <item name="background_color">#FFEEEEEE</item>
	    <item name="padding">40,0,40,0</item>
	</style>
	<style name="content_content">
